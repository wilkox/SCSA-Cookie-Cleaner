{
  "manifest_version": 3,
  "name": "SCSA Login Fix",
  "version": "1.2",
  "description": "Fixes Script Check SA login issues by clearing b2clogin.com and scriptcheck.sa.gov.au cookies",
  "permissions": [
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "*://*.b2clogin.com/*",
    "*://*.scriptcheck.sa.gov.au/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fix SCSA Login Issues",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
